    "@iconify-json/heroicons": "^1.2.2",
    "@nuxtjs/tailwindcss": "6.14.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "happy-dom": "^17.6.3",
    "patch-package": "^8.0.0",
    "postcss": "^8.5.3",
    "postinstall-postinstall": "^2.1.0",
    "prisma": "6.6.0",
    "tsx": "^4.19.4",
