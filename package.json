    "@nuxt/icon": "1.12.0",
    "@nuxt/image": "1.10.0",
    "@nuxt/test-utils": "3.17.2",
    "@prisma/client": "6.6.0",
    "@tanstack/vue-query": "^5.77.2",
    "@types/nodemailer": "^6.4.17",
    "@zenstackhq/runtime": "2.15.1",
    "@zenstackhq/server": "2.15.1",
    "@zenstackhq/tanstack-query": "2.15.1",
    "better-auth": "^1.2.7",
    "date-fns": "^4.1.0",
    "eslint": "^9.25.1",
    "intuit-oauth": "^4.2.0",
    "izitoast": "^1.4.0",
    "jsbarcode": "^3.12.1",
    "node-quickbooks": "^2.0.46",
    "nodemailer": "^7.0.5",
    "nuxt": "^3.17.1",
    "nuxt-toast": "^1.1.4",
    "oxc-parser": "^0.69.0",
    "undici": "^7.9.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
